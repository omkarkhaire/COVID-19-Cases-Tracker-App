<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detailofcountry">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview"
        android:visibility="visible"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Global Stats"
                android:textAllCaps="true"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#03F13E"
                android:layout_marginBottom="2dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Cases"
                    android:textSize="28sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvcases"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="0"
                    android:textSize="28sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textColor="#FB0505"
                    />



            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B6B8B6"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Recovered"
                    android:textSize="28sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/recovered"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="0"
                    android:textSize="28sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textColor="#FB0505"
                    />



            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B6B8B6"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Critical"
                    android:textSize="28sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/critical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="0"
                    android:textSize="28sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textColor="#FB0505"
                    />



            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B6B8B6"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Active"
                    android:textSize="28sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/active"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="0"
                    android:textSize="28sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textColor="#FB0505"
                    />



            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B6B8B6"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Today's Cases"
                    android:textSize="28sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/todaycases"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="0"
                    android:textSize="28sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textColor="#FB0505"
                    />



            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B6B8B6"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Today's Death"
                    android:textSize="28sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/todaydeath"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="0"
                    android:textSize="28sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textColor="#FB0505"
                    />



            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B6B8B6"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Total Deaths"
                    android:textSize="28sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/totaldeaths"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="0"
                    android:textSize="28sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textColor="#FB0505"
                    />



            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B6B8B6"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Tests per Million"
                    android:textSize="28sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/testpermillion"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="0"
                    android:textSize="28sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textColor="#FB0505"
                    />



            </RelativeLayout>





        </LinearLayout>


    </ScrollView>

</LinearLayout>